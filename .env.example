# =============================================================================
# ## Application Configuration
# =============================================================================

# Environment
NODE_ENV="development"                                # development | production | test
PYTHON_ENV="development"

# CORS Configuration (update for production)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:8000"

# File Upload Configuration
MAX_FILE_SIZE_MB=10                                   # Maximum file size for uploads
ALLOWED_FILE_TYPES=".txt,.md,.pdf,.docx,.json"       # Comma-separated file extensions

# =============================================================================
# ## Agent System Configuration
# =============================================================================

# Memory System (F@4 Pattern)
MEMORY_BUFFER_SIZE=100                               # Rolling window size for conversations
MEMORY_CLEANUP_INTERVAL_HOURS=24                    # How often to run cleanup
ENABLE_NIGHTLY_SUMMARIZATION=true

# Domain Agents Configuration
ENABLE_HEALTH_AGENT=true
ENABLE_BUSINESS_AGENT=true
ENABLE_CREATIVE_AGENT=true
ENABLE_TRAVEL_AGENT=true
ENABLE_RELATIONSHIPS_AGENT=true

# Planning Agent Configuration
MAX_PLANNING_SESSION_MINUTES=60                     # Maximum planning session duration
PLANNING_SESSION_TIMEOUT_MINUTES=30                 # Timeout for inactive sessions

# =============================================================================
# ## Background Jobs & Scheduling
# =============================================================================

# Heroku Scheduler Configuration
ENABLE_HEROKU_SCHEDULER=true
NIGHTLY_SUMMARY_CRON="0 2 * * *"                   # Run at 2 AM daily
CLEANUP_CRON="0 3 * * 0"                           # Run at 3 AM every Sunday

# Redis Configuration (if using for job queue)
REDIS_URL="redis://localhost:6379"                  # Local development
# REDIS_URL="redis://h:password@host:port"          # Production (Heroku Redis)

# =============================================================================
# ## Development Tools
# =============================================================================

# Logging
LOG_LEVEL="debug"                                   # debug | info | warn | error
ENABLE_SQL_LOGGING=false                           # Set to true for database debugging

# Testing
TEST_DATABASE_URL="postgresql://postgres:password@localhost:5432/ilpa_test"
RUN_MIGRATIONS_ON_STARTUP=true                     # Auto-run migrations in dev

# ## Task Master Integration
GITHUB_API_KEY="your_github_api_key_here"          # For GitHub integration. Format: ghp_...

# =============================================================================
